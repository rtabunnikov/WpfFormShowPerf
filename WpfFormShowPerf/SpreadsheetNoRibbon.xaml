<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFormShowPerf"
        xmlns:dxsps="http://schemas.devexpress.com/winfx/2008/xaml/spreadsheet" x:Class="WpfFormShowPerf.SpreadsheetNoRibbon"
        mc:Ignorable="d"
        Title="SpreadsheetNoRibbon" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>

        <dxsps:SpreadsheetControl Grid.ColumnSpan="2" Loaded="SpreadsheetControl_Loaded" />

    </Grid>
</Window>
